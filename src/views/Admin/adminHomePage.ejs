</head>
<body>
    <header>
        <div class="logo">QUẢN LÝ THƯ VIỆN</div>
        <nav>
            <ul>
                <li><class="active" href="#home" id="home">Trang chủ</a></li>
                <li><a href="#" onclick="loadPage('Admin/usersPage')">Người dùng</a></li>
                <li><a href="#" onclick="loadPage('Admin/booksPage')">Sách</a></li>
                <li><a href="#" onclick="loadPage('Admin/issuePage')">Mượn/Trả</a></li>
                <li><p>Đăng xuất</button></li>
            </ul>
        </nav>
    </header>
    <div class="content">
        <div id="page-container">
            <!-- CONTENT WILL BE LOADED HERE -->
        </div>
    </div>

    <script>
        async function handleClick() {
          location.reload();
        }
        home.addEventListener('click', handleClick);
  
        const socket = io();
  
        /* hiển thị page */
        function loadPage(pageLayout) { 
            $.ajax({
                url: `/load-page?page_layout=${pageLayout}`,
                method: 'GET',
                success: function (data) {
                    $('#page-container').html(data);
                },
                error: function (error) {
                    console.error('AJAX error:', error);
                }
            });
        }

        /* hiển thị content */
        function loadContent(contentLayout) { 
            $.ajax({
                url: `/load-page?page_layout=${contentLayout}`,
                method: 'GET',
                success: function (data) {
                    $('#content-container').html(data);
                },
                error: function (error) {
                    console.error('AJAX error:', error);
                }
            });
        }
    </script> 
</body>
</html>
